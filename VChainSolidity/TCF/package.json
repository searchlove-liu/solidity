{
  "name": "TCF",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "./deploy/*": "./dist/deploy/*",
    "./rocketh/*": "./dist/rocketh/*",
    "./deployments/*": "./deployments/*",
    "./artifacts/*": "./generated/artifacts/*",
    "./abis/*": "./generated/abis/*"
  },
  "files": [
    "dist",
    "deployments",
    "generated"
  ],
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers-chai-matchers": "^3.0.2",
    "@nomicfoundation/hardhat-ignition": "^3.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-node-test-runner": "^3.0.8",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@nomicfoundation/hardhat-viem": "^3.0.1",
    "@nomicfoundation/hardhat-viem-assertions": "^3.0.4",
    "@openzeppelin/contracts": "^4.9.6",
    "@rocketh/deploy": "^0.17.6",
    "@rocketh/diamond": "^0.17.7",
    "@rocketh/doc": "^0.17.8",
    "@rocketh/export": "^0.17.8",
    "@rocketh/node": "^0.17.8",
    "@rocketh/proxy": "^0.17.8",
    "@rocketh/read-execute": "^0.17.4",
    "@rocketh/signer": "^0.17.3",
    "@rocketh/verifier": "^0.17.8",
    "@rocketh/viem": "^0.17.3",
    "@types/chai": "^5.2.3",
    "@types/node": "^22.19.3",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.1.2",
    "hardhat-deploy": "^2.0.0-next.57",
    "rocketh": "^0.17.8",
    "typescript": "~5.8.0",
    "viem": "^2.43.5"
  },
  "scripts": {
    "---------------------- DEV ---------------------- ": "",
    "local_node": "ldenv -d localhost hardhat node",
    "compile": "hardhat compile",
    "compile:watch": "as-soon -w src pnpm compile",
    "fork:execute": "ldenv tsx @=HARDHAT_FORK=@@MODE @@",
    "fork:deploy": "pnpm compile --build-profile production && ldenv hardhat @=HARDHAT_FORK=@@MODE deploy @@",
    "deploy:dev": "ldenv -d localhost hardhat --network @@MODE deploy --skip-prompts @@",
    "deploy:watch": "wait-on ./generated && ldenv -m localhost as-soon -w generated -w deploy pnpm run deploy:dev @@MODE @@",
    "test": "hardhat test",
    "test:watch": "wait-on ./generated && as-soon -w generated -w test hardhat test --no-compile",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "slippy src/**/*.sol",
    "---------------------- PRODUCTION ---------------------- ": "",
    "docgen": "ldenv -m default pnpm run deploy @@MODE --save-deployments true --skip-prompts ~~ pnpm rocketh-doc -e @@MODE --except-suffix _Implementation,_Proxy,_Router,_Route ~~ @@",
    "execute": "ldenv -n HARDHAT_NETWORK tsx @@",
    "deploy": "pnpm compile --build-profile production && ldenv hardhat --network @@MODE deploy @@",
    "verify": "ldenv rocketh-verify -e @@MODE @@",
    "export": "ldenv rocketh-export -e @@MODE @@",
    "typescript": "tsc",
    "---------------------- START ---------------------- ": "",
    "stop": "zellij kill-session $npm_package_name",
    "start": "zellij-launcher a $npm_package_name || zellij -n zellij.kdl -s $npm_package_name"
  }
}